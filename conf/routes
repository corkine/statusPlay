# [Public]
GET     /status                            controllers.Default.redirect(to="/status/all")
GET     /status/                           controllers.Default.redirect(to="/status/all")
GET     /status/all                        controllers.ActivityController.all
# [Admin]
GET     /status/schema                     controllers.ActivityController.schema
# [User]
GET     /status/:websiteId/activities      controllers.ActivityController.checkActivities(websiteId:Long)



# [Public]
GET     /fitness/all                    controllers.FitnessController.all
# [Admin]
GET     /fitness/schema                 controllers.FitnessController.schema
# [User]
GET     /fitness/details/:recordId      controllers.FitnessController.recordDetails(recordId:Long)

GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)

      